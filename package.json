{
  "name": "maxine-discovery",
  "version": "1.0.0",
  "description": "Maxine is a service discovery and a registry server for all the running nodes with gargantua client dependency.",
  "main": "index.js",
  "scripts": {
    "start": "npm run prod",
    "prod": "taskset -c 0 node --max-old-space-size=4096 --max-new-space-size=1024 --optimize-for-size --gc-interval=100 --no-incremental-marking --max-semi-space-size=16 --optimize-for-size --max-old-space-size=4096 --optimize-for-size index.js",
    "dev": "nodemon index.js --env dev",
    "test": "npm run unit-test",
    "maxibuild": "npx pkg -t node14-linux-arm64,node14-macos-arm64,node14-win-arm64 --out-path artifacts/build/ .",
    "unit-test": "HIGH_PERFORMANCE_MODE=false ULTRA_FAST_MODE=false LIGHTNING_MODE=false WEBSOCKET_ENABLED=true npx mocha --env dev --reporter mocha-circleci-reporter --timeout 10000 --exit",
    "genreports": "nyc --reporter=html --reporter=lcov npm run unit-test",
    "coverage": "npm run genreports && npx codecov -t $CODECOV_TOKEN",
    "load-test": "chmod +x bin/k6 && ULTRA_FAST_MODE=true node index.js & sleep 2 && bin/k6 run src/test/load-test/performance-test.js"
  },
  "keywords": [
    "maxine",
    "discovery-server",
    "naming-server",
    "registry-server",
    "service-registry"
  ],
  "author": "Vrushank Patel",
  "license": "MIT",
  "bin": "index.js",
  "dependencies": {
    "@grpc/grpc-js": "^1.10.0",
    "@grpc/proto-loader": "^0.7.10",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/exporter-jaeger": "^1.30.1",
    "@opentelemetry/exporter-zipkin": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.45.1",
    "activedirectory": "^0.7.2",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "express": "^4.19.2",
    "express-graphql": "^0.12.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.17.3",
    "fast-json-stringify": "^6.0.1",
    "geoip-lite": "^1.4.10",
    "graphql-subscriptions": "^2.0.0",
    "hashring": "^3.2.0",
    "heapdump": "^0.3.15",
    "http-proxy": "^1.18.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.2.2",
    "minimist": "^1.2.8",
    "mqtt": "^5.3.4",
    "p-limit": "^7.1.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-saml": "^3.2.4",
    "prom-client": "^15.1.0",
    "redis": "^4.6.13",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0",
    "ws": "^8.16.0"
  },
  "nodemonConfig": {
    "ext": "js,properties,yaml"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "chai-json": "^1.0.0",
    "codecov": "^3.8.3",
    "istanbul": "^0.4.5",
    "mocha": "^9.2.1",
    "mocha-circleci-reporter": "0.0.3",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VrushankPatel/Maxine"
  },
  "nyc": {
    "include": "src",
    "exclude": [
      "**/app-builder.js",
      "**/route-builder.js",
      "**/logging"
    ],
    "excludeArchived": []
  },
  "pkg": {
    "assets": [
      "node_modules/**/*.css",
      "client/**/*"
    ]
  }
}
