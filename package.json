{
  "name": "maxine-discovery",
  "version": "1.0.0",
  "description": "Maxine is a service discovery and a registry server for all the running nodes with gargantua client dependency.",
  "main": "index.js",
  "scripts": {
    "start": "npm run prod",
    "prod": "node index.js",
    "dev": "nodemon index.js --env dev",
    "test": "npm run unit-test",
    "maxibuild": "npx pkg -t node14-linux-arm64,node14-macos-arm64,node14-win-arm64 --out-path artifacts/build/ .",
    "unit-test": "npx mocha --reporter mocha-circleci-reporter --timeout 10000 --exit",
    "genreports": "nyc --reporter=html --reporter=lcov npm run unit-test",
    "coverage": "npm run genreports && npx codecov -t $CODECOV_TOKEN",
    "load-test": "chmod +x bin/k6 && bin/k6 run src/test/load-test/performance-test.js"
  },
  "keywords": [
    "maxine",
    "discovery-server",
    "naming-server",
    "registry-server",
    "service-registry"
  ],
  "author": "Vrushank Patel",
  "license": "MIT",
  "bin": "index.js",
  "dependencies": {
    "axios": "^0.25.0",
    "body-parser": "^1.19.1",
    "consistent-hashing": "^0.3.0",
    "cors": "^2.8.5",
    "date-and-time": "^2.1.0",
    "enums": "^1.0.3",
    "express": "^4.17.2",
    "express-actuator": "^1.8.0",
    "express-rate-limit": "^8.1.0",
    "express-status-monitor": "^1.3.3",
    "http-proxy": "^1.18.1",
    "lru-cache": "^7.18.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "minimist": "^1.2.5",
    "pkg": "5.6.0",
    "read-last-lines": "^1.8.0",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.5.1",
    "yamljs": "^0.3.0"
  },
  "nodemonConfig": {
    "ext": "js,properties,yaml"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "chai-json": "^1.0.0",
    "codecov": "^3.8.3",
    "istanbul": "^0.4.5",
    "mocha": "^9.2.1",
    "mocha-circleci-reporter": "0.0.3",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VrushankPatel/Gargantua-Maxine-Server"
  },
  "nyc": {
    "include": "src",
    "exclude": [
      "**/app-builder.js",
      "**/route-builder.js",
      "**/logging"
    ],
    "excludeArchived": []
  },
  "pkg": {
    "assets": [
      "node_modules/**/*.css",
      "client/**/*"
    ]
  }
}
